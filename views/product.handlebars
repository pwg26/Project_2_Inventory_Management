<section class="hero is-dark is-bold">
    <div class="hero-body">
        <div class="container">
            <h1 class="title">
                Product Management
            </h1>
            <h2 class="subtitle">
                Add new product or view existing products and their inventories.
            </h2>
        </div>
    </div>
</section>
<br>

<div class="container">
    <div class="columns is-mobile">
        <div class="column">
            <div class="card">
                <div class="content">
                    <form name="orderForm" id="orderForm">
                        <label class="label">Add Product</label>
                        {{!--Product name --}}
                        <div class="field">
                            <label class="label">Product Name</label>
                            <div class="control">
                                <input class="input" id="nameInput" type="text" placeholder="Type product name here." />
                            </div>
                        </div>
                        {{!-- Description --}}
                        <div class="field">
                            <label for="descriptionInput" clas="label">Description</label>
                            <div class="control">
                                <input class="description" id="description" style="color:grey; font-weight; bold">
                            </div>
                        </div>
                        {{!-- asset value --}}
                        <div class="field">
                            <label for="Input" class="label">asset value</label>
                            <div class="control">
                                <input class="input" id="costInout" type="text"
                                    placeholder="asset value of the product." />

                            </div>
                        </div>
                        {{!-- is rented --}}
                        <div class="field">
                            <label for="isRentedInput" clas="label">isrented</label>
                            <div class="control">
                                <input class="isrented" id="isrented" style="color:grey; font-weight; bold">
                            </div>
                        </div>
                        {{!-- rented location --}}
                        <div class="field">
                            <label for="rentedLocation" class="label">rentedLocation</label>
                            <div class="control">
                                <input class="input" type="text" id="rentedLocationInput" placeholder="?" />

                            </div>

                        </div>
                        {{!-- Company --}}
                        <div class="field">
                            <label for="companyRenting" class="label">rentedLocation</label>
                            <div class="control">
                                <input class="input" type="text" id="rentedLocationInput" placeholder="?" />

                            </div>
                        </div>
                        {{!-- Rate --}}
                        <div class="field">
                            <label for="rental_rate" class="label">rentedLocation</label>
                            <div class="control">
                                <input class="input" type="text" id="rentedLocationInput" placeholder="?" />

                            </div>
                        </div>
                        {{!-- Return --}}
                        <div class="field">
                            <label for="realized_returns" class="label">rentedLocation</label>
                            <div class="control">
                                <input class="input" type="text" id="rentedLocationInput" placeholder="?" />

                            </div>
                        </div>
                        {{!-- Checkin --}}
                        <div class="field">
                            <label for="timeCheckedIn" class="label">time checked in</label>
                            <div class="control">
                                <input class="input" type="text" id="rentedLocationInput"
                                    placeholder="time checkedin?" />

                            </div>
                        </div>
                        {{!-- Checkout --}}
                        <div class="field">
                            <label for="time_checked_out" class="label">time checked out</label>
                            <div class="control">
                                <input class="input" type="text" id="rentedLocationInput"
                                    placeholder="time checkedout?" />

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>